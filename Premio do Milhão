// A variável input contém a entrada descrita no exercício
const fs = require("fs");
const input = fs.readFileSync(0, "utf8");

let lines = input.trim().split("\n");

let N = parseInt(lines[0]);            // Número de dias
let acessos = lines.slice(1, N + 1).map(Number);

let soma = 0;
let dias = 0;

for (let i = 0; i < N; i++) {
    soma += acessos[i];
    dias++;
    if (soma >= 1000000) {
        break;
    }
}

console.log(dias);
